mixin repos(repos)
  .repos
    ul.repos__list
      each repo in repos
        li.repos__item
          a.repos__link(href= `/branches/${repo.name}`)= repo.name

html
  include ./blocks/head.pug
  +head({title})
  body
    include ./blocks/heading.pug
    +heading()
    include ./blocks/breadcrumbs.pug
    +breadcrumbs(breadcrumbs)
    h2 Список репозиториев
    +repos(repos)
    script(src='/assets/index.js')
  